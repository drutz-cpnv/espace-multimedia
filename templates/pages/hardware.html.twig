{% extends 'base.html.twig' %}


{% block body %}
    <div class="container py5">
        <div class="hardware">
            <div class="equipment-hero">
                <h1 class="hero-title">
                    Tous <strong>l'équipement.</strong>
                </h1>
                <p class="hero-text">
                    Photo, vidéo, enregistrement audio, etc...<br>Tous ce dont vous avez besoins, se trouve ici.
                </p>
            </div>
            {% for equipment in equipments %}
                {{ include('components/_equipment_card.html.twig') }}
            {% else %}
                <div class="card">
                    <div class="card__body stack">
                        <h2 class="card__title">
                            <a href="#">Aucun équipement n'est actuellment disponible.</a>
                        </h2>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}