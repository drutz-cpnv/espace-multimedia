<div class="card">
    <div class="card__body stack">
        <h2 class="card__title">
            <a href="{{ path('equipment.show', {id: equipment.id, slug: equipment.slug}) }}">{{ equipment.name }}</a>
        </h2>
        <div class="card__image">
            <img src="{% if equipment.filename is not null %}{{ vich_uploader_asset(equipment) }}{% else %}{{ asset('images/default.png') }}{% endif %}" alt="">
        </div>
    </div>
    <footer class="card__footer text-small">
        <div class="text-truncate">
            {{ icon('bookmark_border') }} {{ equipment.categoriesCS }}
        </div>
        <div>
            {{ icon('copyright') }} {{ equipment.brand.name }}
        </div>
    </footer>
    <div class="card__pills">
        <div class="pill" style="color: #ff7b1e">
            Nouveau
        </div>
    </div>
    <a class="card__link" href="{{ path('equipment.show', {id: equipment.id, slug: equipment.slug}) }}"></a>
    {% if app.user.isInCart(equipment) %}<div class="inCart"><i data-feather="check"></i></div>{% endif %}
</div>