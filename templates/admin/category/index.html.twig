{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="container">
        {% include 'admin/_admin-page_header.html.twig' with {
            icon: 'tag',
            title: 'Catégories',
            button: {
                path: 'admin.category.new',
                label: 'Nouvelle catégorie'
            }
        } %}
        <div class="content">
            <table class="table js-search-table" style="margin: 20px 0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Dernière mise à jour</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.updatedAt ? category.updatedAt|date('d.m.Y H:i:s') : '' }}</td>
                        <td>
                            <a class="small-btn" href="{{ path('admin.category.edit', {'id': category.id}) }}">Modifier</a>
                            {{ include('admin/category/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune catégories enregistrée</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
