{{ form_start(form, {attr: {class: 'stacked'}}) }}
<section class="stack-large">
    <section>
        <div class="section-title">
            {{ form_title }}
        </div>
        <div class="grid">
            {{ form_row(form.comments) }}
        </div>
        <button type="submit" onclick="return confirm('Êtes-vous sûre de vouloir changer le status de la commande ? Le changement de status, engendrera l\'envoi d\'un email au client pour l\'avertir du changement de status de ça commande.')" class="btn-gradient">Enregistrer le status</button>
    </section>
</section>
{{ form_end(form) }}