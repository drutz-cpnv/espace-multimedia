<form method="post" class="form-button" action="{{ path('admin.brand.delete', {'id': brand.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cette marque ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
    <button class="small-btn-danger icon-btn" type="submit">{{ icon('delete') }}</button>
</form>