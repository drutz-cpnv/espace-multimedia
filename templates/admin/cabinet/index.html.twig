{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="container">
        {% include 'admin/_admin-page_header.html.twig' with {
            icon: 'door_sliding',
            title: 'Armoires',
            button: {
                path: 'admin.cabinet.new',
                label: 'Nouvelle armoire'
            }
        } %}
        <div class="content">
            <table class="table js-search-table" style="margin: 20px 0">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Emplacement</th>
                    <th>Modification</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for cabinet in cabinets %}
                    <tr data-item="{{ cabinet.id }}">
                        <td>{{ cabinet.name }}</td>
                        <td>{{ cabinet.location }}</td>
                        <td>le {{ cabinet.updatedAt | date("d.m.Y H:i") }} par {{ cabinet.updatedBy }}</td>
                        <td>
                            <a class="small-btn" href="{{ path('admin.cabinet.edit', {'id': cabinet.id}) }}">Modifier</a>
                            {{ include('admin/cabinet/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune armoire enregistr√©e</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
