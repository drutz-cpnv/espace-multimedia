{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="container">
        {% include 'admin/_admin-page_header.html.twig' with {
            icon: 'home_work',
            title: 'Équipement de la salle multimédia',
        } %}
        <div class="content">
            <table class="table js-search-table" style="margin: 20px 0">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Dernière mise à jour</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for room in rooms %}
                    <tr>
                        <td>{{ room.name }}</td>
                        <td>{{ room.updatedAt ? room.updatedAt|date('d.m.Y H:i:s') : '' }}</td>
                        <td>
                            <a class="small-btn" href="{{ path('admin.room.edit', {'id': room.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun équipement de salle</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
